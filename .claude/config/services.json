{
  "services": {
    "auth-service": {
      "name": "Authentication Service",
      "type": "microservice",
      "technology": "NestJS",
      "port": 3011,
      "nats_queue": "auth-service",
      "database": "postgresql",
      "features": [
        "JWT Authentication",
        "User Management",
        "Role-based Access Control",
        "Password Reset"
      ]
    },
    "course-service": {
      "name": "Course Management Service",
      "type": "microservice",
      "technology": "NestJS",
      "port": 3012,
      "nats_queue": "course-service",
      "database": "postgresql",
      "features": [
        "Company Management",
        "Course Management",
        "Hole & Tee Box Management",
        "Schedule Management"
      ]
    },
    "booking-service": {
      "name": "Booking Service",
      "type": "microservice",
      "technology": "NestJS",
      "port": 3013,
      "nats_queue": "booking-service",
      "database": "postgresql",
      "features": [
        "Booking Creation",
        "Booking Management",
        "Payment Integration",
        "Cancellation Policy"
      ]
    },
    "notify-service": {
      "name": "Notification Service",
      "type": "microservice",
      "technology": "NestJS",
      "port": 3014,
      "nats_queue": "notify-service",
      "database": "postgresql",
      "features": [
        "Email Notifications",
        "SMS Notifications",
        "Push Notifications",
        "Template Management"
      ]
    },
    "search-service": {
      "name": "Search Service",
      "type": "microservice",
      "technology": "Golang",
      "port": 3015,
      "nats_queue": "search-service",
      "database": "elasticsearch",
      "features": [
        "Course Search",
        "Availability Search",
        "Geo-location Search",
        "Full-text Search"
      ]
    },
    "ml-service": {
      "name": "Machine Learning Service",
      "type": "microservice",
      "technology": "Python FastAPI",
      "port": 3016,
      "nats_queue": "ml-service",
      "database": "postgresql",
      "features": [
        "Demand Prediction",
        "Price Optimization",
        "User Recommendations",
        "Anomaly Detection"
      ]
    },
    "admin-api": {
      "name": "Admin BFF",
      "type": "bff",
      "technology": "NestJS",
      "port": 3091,
      "frontend": "admin-dashboard",
      "connects_to": ["auth-service", "course-service", "booking-service", "notify-service", "search-service", "ml-service"]
    },
    "user-api": {
      "name": "User BFF",
      "type": "bff",
      "technology": "NestJS",
      "port": 3092,
      "frontend": "user-webapp",
      "connects_to": ["auth-service", "course-service", "booking-service", "notify-service", "search-service"]
    },
    "admin-dashboard": {
      "name": "Admin Dashboard",
      "type": "frontend",
      "technology": "React + TypeScript",
      "port": 3000,
      "api": "admin-api"
    },
    "user-webapp": {
      "name": "User Web Application",
      "type": "frontend",
      "technology": "React + TypeScript",
      "port": 3002,
      "api": "user-api"
    }
  }
}